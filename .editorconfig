root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# noinspection EditorConfigKeyCorrectness
[*.{kt, kts}]
disabled_rules=no-wildcard-imports

# noinspection EditorConfigKeyCorrectness
[**/build/**/*.{kt, kts}]
disabled_rules=*
